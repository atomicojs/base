{
    "name": "@atomico/my-button",
    "version": "1.0.0",
    "type": "module",
    "publishConfig": {
        "access": "public"
    },
    "peerDependencies": {
        "atomico": "*",
        "@atomico/react": "*",
        "@atomico/vue": "*"
    },
    "scripts": {
        "step:types": "tsc",
        "step:build": "library src/**/*",
        "step:exports": "exports lib/**/* types/**/* --wrappers",
        "step:watch:types": "tsc --watch",
        "step:watch:build": "library src/**/*  --watch",
        "step:watch:exports": "exports lib/**/* types/**/* --wrappers --watch",
        "build": "npm run step:types && npm run step:build && npm run step:exports",
        "prepublishOnly": "npm run build"
    },
    "peerDependenciesMeta": {
        "@atomico/react": {
            "optional": true
        },
        "@atomico/vue": {
            "optional": true
        }
    },
    "types": "types/index.d.ts",
    "exports": {
        "./elements": "./lib/elements.js",
        ".": "./lib/index.js",
        "./react": "./wrappers/react.js",
        "./preact": "./wrappers/preact.js",
        "./vue": "./wrappers/vue.js"
    },
    "typesVersions": {
        "*": {
            "elements": [
                "types/elements.d.ts"
            ],
            "react": [
                "wrappers/react.d.ts"
            ],
            "preact": [
                "wrappers/preact.d.ts"
            ],
            "vue": [
                "wrappers/vue.d.ts"
            ]
        }
    }
}