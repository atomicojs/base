{
	"name": "@devserver/cli",
	"description": "Minimalist development server",
	"type": "module",
	"version": "0.12.3",
	"scripts": {
		"example:help": "node src/cli.js --help",
		"example:dev": "node src/cli.js dev example --port 8080 --debug --jsxImportSource atomico",
		"example:dev:cjs": "node ./cli.cjs dev example --cdn --ssl --port 8080 --jsxImportSource atomico",
		"example:build:cjs": "node ./cli.cjs build example/**/*.html public --jsxImportSource atomico --href age/master",
		"example:build": "node src/cli.js build example/**/*.html public  --external --sourcemap --jsxImportSource atomico",
		"test": "ava",
		"build": "rollup -c",
		"publish:all": "pnpm run build && pnpm run test && pnpm publish -r",
		"prepare": "pnpm run build && pnpm run test"
	},
	"publishConfig": {
		"access": "public"
	},
	"author": "UpperCod",
	"repository": {
		"type": "git",
		"url": "git+ssh://git@github.com/UpperCod/devserver.git"
	},
	"license": "ISC",
	"dependencies": {
		"@devserver/build-core": "0.12.3",
		"@devserver/replace-import": "0.12.3",
		"@devserver/resolve": "0.12.3",
		"@devserver/transform-js": "0.12.3"
	},
	"devDependencies": {
		"@betit/rollup-plugin-rename-extensions": "^0.1.0",
		"@devserver/build": "0.12.3",
		"@rollup/plugin-commonjs": "^17.0.0",
		"@rollup/plugin-node-resolve": "9.0.0",
		"@rollup/plugin-replace": "^2.3.4",
		"@uppercod/exp-route": "^1.2.1",
		"atomico": "^1.12.1",
		"ava": "^3.14.0",
		"cac": "^6.7.1",
		"htm": "^3.0.4",
		"https-localhost": "^4.6.4",
		"mime": "^2.4.7",
		"rollup": "^2.35.1",
		"rollup-plugin-terser": "^7.0.2"
	},
	"bin": {
		"devserver": "./cli.cjs"
	},
	"prettier": {
		"tabWidth": 4,
		"singleQuote": false
	},
	"ava": {
		"files": [
			"tests/**/*.test.js",
			"packages/**/*.test.js"
		]
	}
}
