{
    "meta": {
        "id": "storybook monorepo",
        "title": "Started - Atomico + Storybook monorepo(JS,JSX,TS,TSX)",
        "description": "(Beta) Workspace for working with Storybook + Atomico web components",
        "branch": "https://github.com/atomicojs/atomico/tree/storybook-monorepo/"
    },
    "workspaces": [
        "packages/storybook",
        "packages/components/*"
    ],
    "scripts": {
        "start": "run step:watch:* -p",
        "build": "run start -w=storybook",
        "start:storybook": "npm run start -w=storybook",
        "build:storybook": "npm run build -w=storybook",
        "create:component": "scaff component-monorepo packages/components && npm i"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false
    },
    "dependencies": {
        "@atomico/exports": "^1.4.5",
        "@atomico/run": "^0.3.0",
        "@atomico/scaffold": "^2.9.1",
        "@atomico/tsconfig": "^1.1.2",
        "@atomico/vite": "^2.7.3",
        "typescript": "latest",
        "vite": "latest"
    }
}
